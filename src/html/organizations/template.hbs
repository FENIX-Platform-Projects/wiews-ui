                                                <li class="GPAListElement hiddenflag" data-GPAFlag="role_f875">{{organizations_details_role_f875}}</li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="GPA-row">
                                        <div class="GPA-cell lbl">{{organizations_table_details_long}}</div>
                                        <div data-GPAIndex="longitude" class="GPA-cell txt"></div>
                                    </div>
                                    <div class="GPA-row">
                                        <div class="GPA-cell lbl">{{organizations_table_details_lat}}</div>
                                        <div data-GPAIndex="latitude" class="GPA-cell txt"></div>
                                    </div>
