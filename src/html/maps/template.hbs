<div data-page='maps'>
    <div data-role='filters'>
        <div class="row">
            <div class="col-md-6">
                <select id="year">
                    <option value="2017">2017</option>
                    <option value="2016">2016</option>
                    <option value="2014">2014</option>
                </select>

            </div>
            <div class="col-md-6">
                <select id="data_showed">
                    <option value="accessions">{{maps_accessions}}</option>
                    <option value="genus">{{maps_genera}}</option>
                    <option value="species">{{maps_species}}</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <select id="data_filter"></select>
            </div>
            <div class="col-md-6">
                <select id="data_international" name="institutes[]" multiple="multiple">
                    <option value="INT" selected="selected" >{{maps_select_international}}</option>
                    <option value="OTHER" selected="selected" >{{maps_select_national}}</option>
                    <option value="REG" selected="selected" >{{maps_select_regional}}</option>
                </select>
            </div>
        </div>
    </div>
    <div data-role='results'>
        <div class="row">
            <div class="col-md-12">
                <div class="pull-right">
                    <button id="showasmap" type="button" class="btn btn-default">{{maps_button_label}}<span id="btn_text">{{maps_table_label}}</span></button>
                </div>
            </div>
        </div>
        <div id="tabled" class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 clearfix">
                <!-- Result -->
                <div id="toolbar" class="bootstrapTableExport">
                    <button data-role="exsitu_exportbutton" alt="{{exsitu_export_button_alt}}" class="btn btn-default">
                        <span alt="{{organizations_export_button_alt}}" class="icojam icojam_download_1"></span> <span>{{download_results}}</span></button>
                </div>
                <table id="table"
                       data-toolbar="#toolbar"
                       data-toolbar-align="right"
                >
                    <thead>
                    <tr>
                        <th data-sortable="true" data-width="10%" data-field="instcode">{{maps_table_instcode}}</th>
                        <th data-sortable="true" data-width="38%" data-field="name">{{maps_table_name}}</th>
                        <th data-sortable="true" data-width="15%" data-field="country">{{maps_table_country}}</th>
                        <th data-sortable="true" data-width="14%" data-align="right" data-field="accessions">{{maps_table_accessions}}</th>
                        <th data-sortable="true" data-width="14%" data-align="right" data-field="genus">{{maps_table_genus}}</th>
                        <th data-sortable="true" data-width="14%" data-align="right" data-field="species">{{maps_table_species}}</th>
                    </tr>
                    </thead>
                </table>
            </div>
        </div>
        <div id="maped" class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 clearfix">
                <div id="map" style="height: 500px; margin-top: 15px"></div>
            </div>
        </div>
        <div class="row spacer"><!-- Spacer --></div>
    </div>
</div>
<div data-page="loaded" class="row">
    <h1> {{loading_text}} <i class="fa fa-spinner" aria-hidden="true"></i> </h1>
</div>